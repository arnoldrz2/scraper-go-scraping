<div class="container #f5f5f5 grey lighten-4">
    <div class="row">
        <h1>Scraper Go Scraping: New York Times</h1>
        <h2>Notes on this headline</h2>
        <br>
        <br>

        <div class="row">
            <h2><a href="{{result.link}}" target="_blank">{{result.title}}</a></h2>
            <p>{{result.summary}}</p>
        </div>

        <div class="row">
            {{#unless result.note}}
            <h5>Notes on this headline</h5>
            {{/unless}}
        </div>

        <div class="row">
            <ul>
                {{#each result.note}}
                <li>
                    <h5>Name: {{this.name}}</h5>
                    <p>Message: {{this.body}}</p>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="row">
            <h2>Post a note to this headline.</h2>
        </div>

        <form method="POST" action="/headlines/{{result._id}}">
            <div class="row">
                <label>Name</label>
                <input class="" type="text" name="name" id="name" required>
            </div>
            <div class="row">
                <label>Message</label>
                <textarea class="" id="body" rows="3" required></textarea>
            </div>
            <button class="" type="submit"Submit></button>
        </form>
    </div>
</div>